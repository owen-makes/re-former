<h1>New User</h1>

<%= form_with model: @user do |form|%>
  <%= form.label :email %>
  <%= form.text_field :email, placeholder:'example@example.com' %>
  <%= form.label :username%>
  <%= form.text_field :username, required: true, value: 'iamGOD' %>
  <%= form.label :password %>
  <%= form.password_field :password %>
  <%= form.submit %>
<% end %>


